@model IEnumerable<MVCCRUD.Models.AddEmployee>

@if (Model.Count() > 0)
{
    <table class="table-striped table-bordered" style="width:100%">

        <thead>
            <tr>
                <th>
                    Employee Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Designation
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.Name
                    </td>
                    <td width="50%">
                        @item.Address
                    </td>
                    <td width="50%">
                        @item.Designation
                    </td>
                    <td>
                        @*<button onclick="Edit(@item.EmployeeId)">
                            <i class="fa-sharp fa-solid fa-pen-to-square"></i>
                        </button>*@
                        @Html.ActionLink("Edit", "Edit", "Admin", new { Id = item.EmployeeId }, null)
                        @Html.ActionLink("Details", "Details", "Admin", new { Id = item.EmployeeId }, null)
                        @Html.ActionLink("Delete", "Delete", "Admin", new { Id = item.EmployeeId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

